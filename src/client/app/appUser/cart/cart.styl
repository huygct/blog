@import '../../../../../node_modules/nib'


.cart-view
  .left-side-cart-view
    .list-group-cart-all-item-body
      max-height none !important

  .right-side-cart-view
    .box-cal-money
      position relative
      .text-vat
        position absolute
        right 0

.cart-footer
  .sum-money
    font-weight bold
    font-size 1.5rem

.card-view
  .container-card
    .card-no-item
      display flex
      flex-direction column
      align-items center

    .list-group-cart-item
      .list-group-cart-item-heading
        background: #f7f7f7;
        font-size 12px
        text-transform uppercase
        margin-bottom 0
        width 100%
      .cart-product
        display block
        float left
        width 50%
      .cart-price
        display block
        float left
        width 15%
        font-weight bold
      .cart-count
        display block
        float left
        width 15%
        font-weight bold
      .cart-prices
        display block
        float left
        width 20%
        font-weight bold

      .column-format
        padding 8px 16px

      .text-in-right
        text-align right

      .list-group-cart-all-item-body
        max-height 400px
        overflow auto
      .line-separate-item
        border-bottom 1px dotted #cccccc
      .list-group-cart-item-body
        width 100%
        margin-top 8px
        margin-bottom 0
        .cart-product
          .detail-item-card
            box-shadow none
            .button-remove-item
              max-width 120px
              margin 0
              text-transform none
        .cart-count
          padding 0 16px

@media(max-width: 992px)
  .card-view
    .container-card
      .list-group-cart-item
        .list-group-cart-item-body
          position relative
          .cart-product
            .detail-item-card
              .button-remove-item
                margin-top 24px

        .list-group-cart-item-heading
          display none
        .cart-product
          display block
          float none
          width auto
        .cart-price
          display block
          float none
          width auto
          font-weight bold
          position absolute
          left 100px
          bottom 40px
        .cart-count
          display block
          float none
          width auto
          font-weight normal
          position absolute
          right 16px
          top 32px
        .cart-prices
          display block
          float none
          width auto
          font-weight bold
          position absolute
          right 35px
          top 70px

        .column-format
          padding 0

        .text-in-right
          text-align left

