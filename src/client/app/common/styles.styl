#body-app-id
  font-family Roboto,"Helvetica Neue",sans-serif
  /*
   *  STYLE scrollbar
   */
#scroll-bar-type::-webkit-scrollbar-track
{
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background-color: #F5F5F5;
}

#scroll-bar-type::-webkit-scrollbar
{
  width: 6px;
  background-color: #F5F5F5;
}

#scroll-bar-type::-webkit-scrollbar-thumb
{
  background-color: #000000;
}

